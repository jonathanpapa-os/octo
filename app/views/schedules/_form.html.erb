<%= form_with(model: schedule) do |form| %>
  <% if schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
        <% schedule.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Full Name</label>
    <%= form.text_field :name, required: true, value: current_user.name %>
  </div>

  <div class="field">
    <label>Email</label>
    <%= form.text_field :email, required: true, value: current_user.email %>
  </div>

  <div class="field">
    <label>Phone Number</label>
    <%= form.text_field :phone, required: true %>
  </div>

  <div class="field">
    <label>Gender</label><br>
    <%= form.radio_button :gender, 'Male' %> Male
    <%= form.radio_button :gender, 'Female' %>Female
    <%= form.radio_button :gender, 'N/A' %>N/A
  </div>

  <div class="field">
    <label>Birthday</label>
    <%= form.text_field :birthday, required: true %>
  </div>

  <div class="field">
    <label>Complete Address <i>(Street, Barangay, Municipality/ City)</i></label>
    <%= form.text_field :address, required: true %>
  </div>

  <div class="field">
    <label>Date & Time</label>
    <%= form.date_select :starts_at %>
    <%= form.time_select :starts_at, :ignore_date => true %>
  </div>

  <div class="field">
  <%= form.hidden_field :account_id, value: @account.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
