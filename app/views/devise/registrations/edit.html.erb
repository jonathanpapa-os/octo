<% content_for :title do %>Edit Profile<% end %>

<div class="w-full p-8 flex justify-center font-sans">

<div class="rounded bg-white w-80 p-4">
    <div class="flex justify-between py-1">
      <h2 class="text-2xl">Edit <%= resource_name.to_s.humanize %></h2>
    </div>
    <div class="text-md mt-2">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Name,class: "mt-1 float-left" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name",class: "bg-white p-2 rounded border-b border-grey cursor-pointer w-full"  %>
  </div>

  <div class="field">
    <%= f.label :email,class: "mt-1 float-left"  %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "bg-white p-2 rounded border-b border-grey cursor-pointer w-full"  %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <% end %>

  <div class="field">
    <%= f.label :current_password,class: "mt-1 float-left" %>
    <%= f.password_field :current_password, autocomplete: "current-password",class: "bg-white p-2 rounded border-b border-grey cursor-pointer w-full"  %>
  </div>

  <div class="field">
    <%= f.label :password, "New Password",class: "mt-1 float-left" %>
    <%= f.password_field :password, autocomplete: "new-password",class: "bg-white p-2 rounded border-b border-grey cursor-pointer w-full"  %>

  </div>

  <div class="field">
    <%= f.label :password_confirmation,class: "mt-1 float-left" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "bg-white p-2 rounded border-b border-grey cursor-pointer w-full"  %>
  </div>

  <div class="actions  mt-4 mb-4">
    <%= f.submit "Update",class: "bg-purple-700 text-white active:bg-purple-800 font-bold uppercase text-sm px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150 w-full" %>
  </div>
</div>

<% end %>

<div class="form-signin">
  <p><%= link_to  "Close my account", registration_path(resource_name),class: "mb-2 text-gray-500 hover:text-purple-700 background-transparent font-bold uppercase px-6 py-2 text-sm outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150"  , data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>

</div>
</div>
