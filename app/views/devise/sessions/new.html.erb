
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="w-full p-8 flex justify-center font-sans">

<div class="rounded bg-white w-80 p-4">
    <div class="flex justify-between py-1">
      <h2 class="text-2xl">Log in</h2>
    </div>
    <div class="text-md mt-2">
    <%= f.label :email,class: "mt-1"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "bg-white p-2 rounded border-b border-grey cursor-pointer w-full" %>

    <%= f.label :password,class: "mt-4"%><br />
    <%= f.password_field :password, autocomplete: "current-password",class: "bg-white p-2 rounded border-b border-grey cursor-pointer w-full" %>

    <% if devise_mapping.rememberable? %>
      <div class="inline-flex items-center mt-4 mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me,class: "pl-2" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in",class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded w-full" %>
    </div>
  </div>

  <% end %>

  <%= render "devise/shared/links" %>

</div>

</div>
