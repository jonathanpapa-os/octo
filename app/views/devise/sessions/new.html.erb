
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="w-full p-8 flex justify-center font-sans">

<div class="rounded bg-white w-80 p-4">
    <div class="flex justify-between py-1">
      <h2 class="text-2xl">Log in</h2>
    </div>
    <div class="text-md mt-2">
    <%= f.label :email,class: "mt-1 float-left"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "bg-white p-2 rounded border-b border-grey cursor-pointer w-full" %>

    <%= f.label :password,class: "mt-4 float-left"%><br />
    <%= f.password_field :password, autocomplete: "current-password",class: "bg-white p-2 rounded border-b border-grey cursor-pointer w-full" %>

    <% if devise_mapping.rememberable? %>
      <div class="inline-flex items-center mt-4 mb-4 float-left">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me,class: "pl-2" %>
      </div>
    <% end %>

    <div class="actions mb-4">
      <%= f.submit "Log in",class: "bg-blue-500 text-white active:bg-blue-600 font-bold uppercase text-sm px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150 w-full" %>
    </div>
  </div>

  <% end %>

  <% if !flash[:alert].blank? %>
     <div class="alert alert_default alert-dismissible">
       <a href="#" class="flash_close_btn" data-dismiss="alert" aria-label="close">Ã—</a>
       <%= flash[:alert]%>
     </div>
 <% end %>

  <%= render "devise/shared/links" %>

</div>

</div>
