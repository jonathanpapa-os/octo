<% content_for :title do %><%= @tenant.company_name %><% end %>

<% if current_user.superadmin_role == TRUE ||  current_user.supervisor_role == TRUE %>

  <div class="container mx-auto px-4 sm:px-8">
      <div class="py-8">
          <div class="-mx-4 sm:-mx-8 px-4 sm:px-8 py-4 overflow-x-auto">
              <div class="inline-block min-w-half shadow rounded-lg overflow-hidden">
                <div class="flex bg-gray-100">
                  <div class="flex-none">
                    <h2 class="text-2xl font-semibold leading-tight p-3">Appointment Details</h2>
                  </div>
                  <div class="flex-1"></div>
                </div>

                  <table class="min-w-full leading-normal">
                      <tbody>
                          <tr>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-left">Name</p> </td>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-right"><%= @appointment.name %></p> </td>
                          </tr>
                          <tr>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-left">Gender</p> </td>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-right"><%= @appointment.gender %></p> </td>
                          </tr>
                          <tr>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-left">Phone</p> </td>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-right"><%= @appointment.phone %></p> </td>
                          </tr>
                          <tr>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-left">Birthday</p> </td>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-right"><%= @appointment.birthday %></p> </td>
                          </tr>
                          <tr>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-left">Appointment Date & Time</p> </td>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-right"><%= @appointment.appointment %></p> </td>
                          </tr>
                          <tr>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-left">Address</p> </td>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-right"><%= @appointment.address %></p> </td>
                          </tr>
                          <tr>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-left">Email</p> </td>
                              <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm"> <p class="text-gray-900 whitespace-no-wrap text-right"><%= @appointment.email %></p> </td>
                          </tr>
                      </tbody>
                  </table>

                  <%= link_to 'Back', appointments_path %> |
                  <%= link_to 'Reschedule', edit_appointment_path(@appointment) %> |
                  <%= link_to 'Cancel Booking', @appointment, method: :delete, data: { confirm: 'Are you sure?' } %>

              </div>
          </div>
      </div>
  </div>



<% else %>

  <div class="container mx-auto px-4 sm:px-8">
