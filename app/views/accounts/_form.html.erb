<%= form_with(model: account) do |form| %>
  <% if account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
        <% account.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.superadmin_role == TRUE %>

    <div class="field">
      <label>Company Slug</label>
      <%= form.text_field :slug, required: true %>
    </div>

    <div class="field">
      <label>Company Name</label>
      <%= form.text_field :name, required: true %>
    </div>

    <div class="field">
      <label>Description</label>
      <%= form.text_area :description, required: true, rows: 1 %>
    </div>

      <div class="field">
        <label>Email Address</label>
        <%= form.text_field :email, :placeholder => "Can add later" %>
      </div>

  <% else %>
    <% if current_user.supervisor_role == TRUE %>

    <div class="field">
      <label>Company Slug</label>
      <%= form.text_field :slug, required: true, :readonly => true %>
    </div>

    <div class="field">
      <label>Company Name</label>
      <%= form.text_field :name, required: true %>
    </div>

    <div class="field">
      <label>Description</label>
      <%= form.text_area :description, required: true, rows: 1 %>
    </div>

      <div class="field">
        <label>Email Address</label>
        <%= form.text_field :email, :placeholder => "Can add later", :readonly => true %>
      </div>

    <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
