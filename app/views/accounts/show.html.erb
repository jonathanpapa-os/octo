<p id="notice"><%= notice %></p>

<p>
  <strong>Slug:</strong>
  <%= @account.slug %>
</p>

<p>
  <strong>Name:</strong>
  <%= @account.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @account.description %>
</p>

<%= link_to 'Edit', edit_account_path(@account) %> |
<%= link_to 'Back', accounts_path %>
<br>

<input type="hidden" value="<%= @account.slug %>" id="slug">
<button onclick="clickyClick()">Manage Account</button>


<script type="text/javascript">

  function clickyClick() {
    url =  'http://' + document.getElementById("slug").value + '.' + 'localhost:3000' + "/schedules"
    window.open(url);
  }

</script>
